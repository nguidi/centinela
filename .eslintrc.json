{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "windows"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "getter-return": [
      "warn"
    , {
        "allowImplicit": true
      }
    ],
    "no-restricted-globals":
    [
      "warn",
      "event",
      "fdescribe"
    ],
    "no-undef-init":
    [
      "warn"
    ],
    "valid-typeof":
    [
      "warn",
      {
        "requireStringLiterals": true
      }
    ]
  }
}
